<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/login">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email address:"
        android:id="@+id/login_email_textView"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="93dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editText_registration_email"
        android:layout_alignBottom="@+id/login_email_textView"
        android:layout_alignRight="@+id/editText_registration_password"
        android:layout_alignEnd="@+id/editText_registration_password" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password: "
        android:id="@+id/login_password_textview"
        android:layout_below="@+id/login_email_textView"
        android:layout_alignLeft="@+id/login_email_textView"
        android:layout_alignStart="@+id/login_email_textView"
        android:layout_marginTop="47dp" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText_registration_password"
        android:layout_alignBottom="@+id/login_password_textview"
        android:layout_toRightOf="@+id/login_email_textView"
        android:layout_toEndOf="@+id/login_email_textView" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:id="@+id/button_registration_login"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/login_password_textview"
        android:layout_alignStart="@+id/login_password_textview"
        android:onClick="loginUser"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/button_registration_registration"
        android:layout_alignTop="@+id/button_registration_login"
        android:layout_alignRight="@+id/editText_registration_password"
        android:layout_alignEnd="@+id/editText_registration_password"
        android:layout_marginRight="39dp"
        android:layout_marginEnd="39dp"
        android:onClick="launchRegistration"/>




</RelativeLayout>